<div class="page-header">
  <h3>User #<%= @user.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Gender</dt>
      <dd><%= @user.gender %></dd>

      <dt>Preferences</dt>
      <dd>
        <% if @user.preferences.present? %>
          <a href="/preferences/<%= @user.preferences_id %>">
            <%= @user.preferences.taste %>
          </a>
        <% end %>
      </dd>

      <dt>Email</dt>
      <dd><%= @user.email %></dd>

      <dt>Password</dt>
      <dd><%= @user.password %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/users" class="btn btn-primary">
        Back
      </a>
    </div>
  </div>
</div>
