<!-- Validation failure messages -->
<% if @route.errors.any? %>
  <% @route.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Route</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_route" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @route.user_id %>">
      </div>

      <!-- Label and input for cities_id -->
      <div class="form-group">
        <label for="cities_id" class="control-label">
          Cities
        </label>

        <input type="text" id="cities_id" name="cities_id" placeholder="Cities" class="form-control" value="<%= @route.cities_id %>">
      </div>

      <button class="btn btn-success">
        Create Route
      </button>
      or
      <a href="/routes">Cancel</a>
    </form>
  </div>
</div>
